<div class="container form-container" style="max-width: 390px;">

  <div class="panel panel-default">

    <div class="panel-heading">
      <h4>Register</h4>
    </div>

    <%= render 'shared/form_errors', resource: resource %>

    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="form-group">
          <%= f.label :email, class: 'control-label' %>
          <%= f.email_field :email, class: 'form-control input-sm' %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: 'control-label' %>
          <%= f.password_field :password, class: 'form-control input-sm' %>
        </div>

        <div class="form-group">
          <%= f.submit value: 'Register', class: 'btn btn-primary btn-block' %>
          <%= link_to 'Login', new_user_session_path, class: 'btn btn-default btn-block btn-bottom' %>
        </div>

      <% end %>
    </div>

    <%= render 'shared/omniauth' %>

  </div>

</div>