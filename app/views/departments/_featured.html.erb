<div id="featured" style="text-align:center;height: 145px;overflow: auto;-webkit-overflow-scrolling: touch;">
  <% Feature.all.each do |feature| %>
    <div>
      <a href="<%= item_path feature.item_id %>">
        <%= image_tag feature.image, size: '320x145' %>
      </a>
    </div>
  <% end %>
</div>